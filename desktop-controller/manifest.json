{
  "manifest_version": 2,
  "name": "Desktop Controller",
  "description": "Desktop Controller app for TvAmigos",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Desktop Controller"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.aovivobrasil.com/tvamigos2/*"],
      "css": ["mystyle.css"],
      "js": ["myscript.js", "jquery-3.1.1.min.js"]
    }
  ]

}