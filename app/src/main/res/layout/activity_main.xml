<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsantossim.desktopcontroller.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="Desligar em"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shutdownButton"
                android:layout_weight="1" />

            <EditText
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/minutes"
                android:text="60"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Minutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minuts"
                android:layout_weight="0.29"
                android:textAlignment="viewEnd" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Cancelar Desligamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancelShutdownButton" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Ipconfig -renew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/renew" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Abrir canal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/channels" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Trocar Tela Cheia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/togglefullscreen"
                android:layout_weight="0.58" />

            <Button
                android:text="Recarregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reload"
                android:layout_weight="0.59" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:text="Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.69"
                android:textStyle="normal|bold"
                android:textSize="30sp" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volumePlus"
                android:layout_weight="0.19"
                android:textSize="24sp" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volumeMinus"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:text="Brilho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brightLabel"
                android:layout_weight="0.77"
                android:textStyle="normal|bold"
                android:textSize="30sp" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brightUp"
                android:textSize="24sp"
                android:layout_weight="0.15" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brightDown"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:text="Server ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ServerIpLabel" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/serverIpInput"
                android:layout_weight="0.90" />

            <Button
                android:text="Salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveIpButton" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
